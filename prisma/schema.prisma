generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

type SkillsItems {
  level String
  name  String
}

model certifications {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  date   String
  issuer String
  skills String[]
  title  String
}

model details {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  github    String
  linkedin  String
  location  String
  name      String
  objective String
  phone     String
  title     String
  website   String
}

model education {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  degree      String
  description String
  endDate     String
  gpa         String
  institute   String
  location    String
  startDate   String
}

model experience {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  company     String
  description String
  endDate     String
  location    String
  position    String
  startDate   String
}

model projects {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  description String
  link        String?
  title       String
}

model skills {
  id    String        @id @default(auto()) @map("_id") @db.ObjectId
  items SkillsItems[]
  title String
}
